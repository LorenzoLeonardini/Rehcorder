<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="4dp"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:paddingHorizontal="5dp">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="1"
        android:layout_columnWeight="1"
        android:orientation="vertical"
        android:paddingVertical="9dp">

        <TextView
            android:id="@+id/track_title"
            style="@style/TextAppearance.Material3.TitleMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:text="June, 11th 2022"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/track_date"
            style="@style/TextAppearance.Material3.BodyMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="June, 11th 2022"
            tools:ignore="HardcodedText" />

    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="2"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <!--        <LinearLayout-->
        <!--            android:id="@+id/track_notes_button"-->
        <!--            android:layout_width="44dp"-->
        <!--            android:layout_height="44dp"-->
        <!--            android:background="@drawable/rounded_view_ripple"-->
        <!--            android:clickable="true"-->
        <!--            android:contentDescription="@string/notes"-->
        <!--            android:focusable="true"-->
        <!--            android:gravity="center">-->

        <!--            <com.google.android.material.button.MaterialButton-->
        <!--                style="@style/Widget.App.Button.List.IconOnly"-->
        <!--                android:layout_width="wrap_content"-->
        <!--                android:layout_height="wrap_content"-->
        <!--                android:clickable="false"-->
        <!--                android:focusable="false"-->
        <!--                app:icon="@drawable/ic_text_snippet" />-->
        <!--        </LinearLayout>-->

        <LinearLayout
            android:id="@+id/track_share_button"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:background="@drawable/rounded_view_ripple"
            android:clickable="true"
            android:contentDescription="@string/share"
            android:focusable="true"
            android:gravity="center">

            <com.google.android.material.button.MaterialButton
                style="@style/Widget.App.Button.List.IconOnly"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:focusable="false"
                app:icon="@drawable/ic_share" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/track_play_button"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:background="@drawable/rounded_view_ripple"
            android:clickable="true"
            android:contentDescription="@string/share"
            android:focusable="true"
            android:gravity="center">

            <com.google.android.material.button.MaterialButton
                style="@style/Widget.App.Button.List.FilledIconOnly"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:contentDescription="@string/play"
                android:focusable="false"
                app:icon="@drawable/ic_play" />
        </LinearLayout>

    </androidx.appcompat.widget.LinearLayoutCompat>

</GridLayout>